<?xml version="1.0" encoding="utf-8"?>
<resources>


  <declare-styleable name="ChamDroidToolkitTheme">
    <attr name="ChamTextStyle" format="reference"/>
    <attr name="ChamEditTextStyle" format="reference"/>
    <attr name="ChamHeaderStyle" format="reference"/>
    <attr name="ChamDatePickerStyle" format="reference"/>
  </declare-styleable>
  
  <declare-styleable name="MaxWidthLinearLayout">
    <attr name="maxWidth" format="dimension"/>
  </declare-styleable>

  <declare-styleable name="ChamHeader">
    <attr name="Header" format="string" />
    <attr name="Required" format="boolean" />
    <attr name="HeaderStyle" format="reference" />
  </declare-styleable>

  <declare-styleable name="ChamText" parent="ChamHeader">
    <attr name="Text" format="string" />
    <attr name="TextStyle" format="reference" />
    <attr name="Currency" format="boolean" />
  </declare-styleable>

  <declare-styleable name="ChamDatePicker" parent="ChamText">
  </declare-styleable>

  <declare-styleable name="ChamEditText" parent="ChamText">
    <attr name="ReadOnly" format="boolean" />
    <attr name="android:imeOptions"/> 
    <attr name="android:inputType"/>
    <attr name="android:lines"/>
    <attr name="android:minLines"/>
    <attr name="android:maxLines"/>
    <attr name="android:singleLine"/>
  </declare-styleable>

</resources>